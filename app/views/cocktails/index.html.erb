<div class="card--grid">
<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail) do %>
    <div class="card--container">
      <div class="card--img" style="background-image: url(<%= cocktail.picture_url %>)">
      </div>
      <div class="card--name">
        <%= cocktail.name %>
      </div>
    </div>
  <% end %>

<% end %>
</div>





