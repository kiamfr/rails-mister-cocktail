<div class="show-container">
  <div class="profile-banner" style="background-image: url('<%= cl_image_path @cocktail.photo %>')">
    <h2><%= @cocktail.name %></h2>
  </div>
  <div class="recipe">
    <div class="ingredients">
      <h3>Ingredients</h3>
      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt">
          </i>
            <% end %>
        </li>
      <% end %>
      </ul>
      <%= link_to "Add things to cocktail", new_cocktail_dose_path(@cocktail, @dose) %>
    </div>
    <div class="recipe-description">
      <h3>Description</h3>
      <span><%= @cocktail.recipe %></span>
    </div>
  </div>
  <%= render 'back' %>
</div>
