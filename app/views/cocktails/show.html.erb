<div class="show-container">
  <div class="profile-banner" style="background-image: url('<%= cl_image_path('MacBook_-_1_ckigaw.png', :default_image => @cocktail.photo) %>')">
    <h2><%= @cocktail.name %></h2>
  </div>
  <div class="recipe">
    <div class="ingredients">
      <h3>Ingredients</h3>
      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt">
          </i>
            <% end %>
        </li>
      <% end %>
      </ul>
    </div>
    <div class="recipe-description">
      <h3>Description</h3>
      <span><%= @cocktail.recipe %></span>
    </div>
  </div>
  <div class="--container">
  <h3>Add ingredients and dose</h3>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Add a new dose", class: "btn btn-primary" %>
    <%= f.button :button, 'Cancel', type: :reset, class: "btn btn-danger" %>
  <% end %>
  </div>
  <%= render 'back' %>
</div>
