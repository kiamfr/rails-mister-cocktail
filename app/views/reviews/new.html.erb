<%= render 'navbar' %>
<div class="--container">
  <h3>Add a review</h3>
  <%= simple_form_for [@cocktail, @review] do |f| %>
    <%= f.input :rating, :collection => 1..5 %>
    <%= f.input :review, input_html: { maxlength: 15} %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "<< Back", cocktail_path(@cocktail), class: "btn-back" %>
</div>
